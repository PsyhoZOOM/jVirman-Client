<AnchorPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="@main.css"
  xmlns="http://javafx.com/javafx/8.0.171"
  fx:controller="com.psyhozoom.virman.Client.Controllers.IsplataController">
  <children>
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
      AnchorPane.topAnchor="0.0" layoutX="5.0" layoutY="5.0" prefHeight="464.0" prefWidth="899.0"
      spacing="5.0">
      <children>
        <HBox>
          <children>
            <VBox HBox.hgrow="ALWAYS" spacing="5.0">
              <children>
                <Label text="Na Račun"/>
                <ListView fx:id="lsNaRacun"/>
              </children>
              <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
              </padding>
            </VBox>
            <VBox HBox.hgrow="ALWAYS" fillWidth="false" spacing="20.0">
              <children>
                <ComboBox editable="true" promptText="Šifra" fx:id="cmbSifra"/>
                <TextField alignment="CENTER" minWidth="250.0"
                  promptText="Model" fx:id="tModel"/>
                <TextField alignment="CENTER" minWidth="250.0"
                  promptText="Poziv na broj" fx:id="tPozivNaBroj"/>
                <HBox VBox.vgrow="NEVER" alignment="CENTER_RIGHT" spacing="5.0">
                  <children>
                    <TextField alignment="CENTER_RIGHT" promptText="Iznos"
                      fx:id="tIznos"/>
                    <Label text="din."/>
                  </children>
                  <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                  </padding>
                </HBox>
                <TextArea prefHeight="172.0" prefWidth="464.0"
                  promptText="SVRHA PLAĆANJA" fx:id="tSvrhaPlacanja"/>
              </children>
              <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="20.0"/>
              </padding>
            </VBox>
          </children>
        </HBox>
        <HBox VBox.vgrow="NEVER">
          <children>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button mnemonicParsing="false" onAction="#stampaj" text="ŠTAMPA" fx:id="bStampa"/>
          </children>
        </HBox>
      </children>
      <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </padding>
    </VBox>
  </children>
</AnchorPane>
