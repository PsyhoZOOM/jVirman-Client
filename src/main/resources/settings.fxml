<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="@main.css"
  xmlns="http://javafx.com/javafx/8.0.171"
  fx:controller="com.psyhozoom.virman.Client.Controllers.SettingsController">
  <children>
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
      AnchorPane.topAnchor="0.0" alignment="CENTER" spacing="10.0">
      <children>
        <TextField alignment="CENTER" promptText="Adresa Servera"
          fx:id="tHostaName">
          <padding>
            <Insets top="20.0"/>
          </padding>
        </TextField>
        <TextField alignment="CENTER" promptText="Port" fx:id="tPortNumber">
          <padding>
            <Insets top="20.0"/>
          </padding>
        </TextField>
        <TextField alignment="CENTER" promptText="Korisničko ime"
          fx:id="tUserName">
          <padding>
            <Insets top="20.0"/>
          </padding>
        </TextField>
        <Button onAction="#saveData" text="Snimi" fx:id="bSave"/>
      </children>
      <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </padding>
    </VBox>
  </children>
</AnchorPane>
